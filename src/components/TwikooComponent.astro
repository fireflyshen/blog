// TwikooComponent.astro
import { useEffect } from "react";

const initializeTwikoo = async () => {
  const twikoo = await import("twikoo");
  twikoo.init({
    envId: "https://comment.catshen.live/", // 请替换为你的环境ID
    el: "#tcomment",
  });
};

useEffect(() => {
  if (typeof window !== "undefined") {
    initializeTwikoo();
  }
}, []);

return <div id="tcomment"></div>;
